{
  "rules": {
    "projects": {
      ".read": true,
      "$projects": {
        ".write": "newData.hasChild('uid') && newData.child('uid').val() === auth.uid",
        "votes": {
          ".write": "auth !== null"
        },
        "partners": {
          ".write": "auth !== null"
        },
        "$posts": {
          ".write": "root.child('projects/' + $projects + '/uid').val() === auth.uid"
        }
      }  
    }
  }
}
